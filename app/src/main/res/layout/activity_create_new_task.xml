<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateNewTaskActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_new_task_list"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_new_task_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <TextView
                android:id="@+id/tv_new_task_list_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Task"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/et_new_task_list_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/app_bar_new_task_list"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:hint="New task title"
        android:maxLength="25"
        android:maxLines="1"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <EditText
        android:layout_below="@+id/et_new_task_list_title"
        android:id="@+id/et_new_task_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLines="10"
        android:inputType="textMultiLine"
        android:hint="Description"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/btn_create_new_task_list"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/button_rounded_border"
        android:text="Create"
        />

</RelativeLayout>